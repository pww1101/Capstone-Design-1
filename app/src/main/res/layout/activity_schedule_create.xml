<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:hint="일정 이름"
        android:textSize="18sp"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="시작"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextName" />
    
    <Button
        android:id="@+id/buttonStartDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextName" />
    
    <Button
        android:id="@+id/buttonStartTime"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonStartDate" />
    
    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="종료"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonStartTime" />
    
    <Button
        android:id="@+id/buttonEndDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonStartTime" />
    
    <Button
        android:id="@+id/buttonEndTime"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonEndDate" />
    
    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="장소"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonEndTime" />

    <EditText
        android:id="@+id/editTextPlace"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:hint="장소를 입력하십시오."
        android:textSize="18sp"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonEndTime" />
    
    <TextView
        android:id="@+id/textViewMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="메모"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextPlace" />
    
    <EditText
        android:id="@+id/editTextMemo"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:hint="메모를 입력하십시오."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextPlace" />

    <TextView
        android:id="@+id/textViewAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="알람"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextMemo" />
    
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/editTextMemo" />
    
    <Button
        android:id="@+id/buttonAlarmDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/switchAlarm" />
    
    <Button
        android:id="@+id/buttonAlarmTime"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintTop_toBottomOf="@id/buttonAlarmDate" />
    
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="취소"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/editTextName"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="저장"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/editTextName"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>